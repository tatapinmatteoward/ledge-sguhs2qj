---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Gallery: Captured Moments in Skate Culture";
const pageDescription = "Explore our curated visual archive at Ledge & Lane Journal, showcasing the raw energy and artistic essence of skateboarding through stunning photography and video highlights.";

const featuredCollections = [
  {
    id: 1,
    title: "Street Sessions",
    description: "Raw shots from iconic urban ledges and lanes, highlighting grinders and ollies against gritty backdrops.",
    items: [
      {
        type: "image",
        title: "A lone skater mid-air over a concrete barrier at dusk.",
        alt: "Skater mid-air over concrete barrier at dusk",
        className: "animate-fadeIn"
      },
      {
        type: "image",
        title: "Crew pushing limits on rain-slicked pavement.",
        alt: "Skaters on rain-slicked pavement",
        className: "animate-fadeIn"
      }
    ]
  },
  {
    id: 2,
    title: "Artist Spotlights",
    description: "Collaborations with photographers and filmmakers who blend skate aesthetics with contemporary art.",
    items: [
      {
        type: "video",
        title: "30-second clip of a seamless line through abandoned warehouses.",
        alt: "Video highlight of skateboarding through warehouses",
        className: "animate-fadeIn"
      },
      {
        type: "image",
        title: "Close-up of",
        alt: "Close-up of skateboarding action",
        className: "animate-fadeIn"
      }
    ]
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-b from-primary to-black opacity-90 z-0"></div>
    <div class="container mx-auto px-4 py-24 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">Gallery</h1>
        <p class="text-xl text-gray-300 mb-8">Chronicling the Pulse of Skateboarding Culture</p>
        <div class="h-1 w-24 bg-accent mx-auto mb-10"></div>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">
          Explore our curated visual archive at Ledge & Lane Journal, showcasing the raw energy and artistic essence of skateboarding through stunning photography and video highlights.
        </p>
      </div>
    </div>
  </div>

  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Collections</h2>
        <div class="h-1 w-16 bg-accent mx-auto"></div>
      </div>

      <div class="space-y-20">
        {featuredCollections.map((collection) => (
          <div key={collection.id} class="group">
            <div class="flex flex-col md:flex-row items-start mb-10">
              <div class="md:w-1/3 mb-6 md:mb-0 md:pr-8">
                <h3 class="text-2xl font-bold text-white mb-3">{collection.title}</h3>
                <p class="text-gray-400">{collection.description}</p>
              </div>
              <div class="md:w-2/3">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  {collection.items.map((item, index) => (
                    <div key={index} class="group relative overflow-hidden rounded-xl">
                      <div class="aspect-square bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center">
                        {item.type === "image" ? (
                          <div class="w-full h-full flex items-center justify-center">
                            <div class="bg-gray-700 border-2 border-dashed rounded-xl w-16 h-16" />
                          </div>
                        ) : (
                          <div class="relative w-full h-full flex items-center justify-center">
                            <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center group-hover:bg-opacity-20 transition-all duration-300">
                              <div class="w-16 h-16 rounded-full bg-accent flex items-center justify-center">
                                <i class="fas fa-play text-black text-xl"></i>
                              </div>
                            </div>
                            <div class="bg-gray-700 border-2 border-dashed rounded-xl w-16 h-16" />
                          </div>
                        )}
                      </div>
                      <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                        <p class="text-white text-sm">{item.title}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-gradient-to-br from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Visual Archive</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">A curated selection of our most impactful visual stories</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {Array.from({ length: 6 }).map((_, index) => (
          <div key={index} class="group relative overflow-hidden rounded-xl transform transition-transform duration-500 hover:scale-105">
            <div class="aspect-square bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center">
              <div class="bg-gray-700 border-2 border-dashed rounded-xl w-16 h-16" />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
              <div>
                <h3 class="text-white font-bold text-lg">Visual Story {index + 1}</h3>
                <p class="text-gray-300 text-sm">Captured moments from urban skate sessions</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <button class="px-8 py-3 bg-accent text-black font-medium rounded-full hover:bg-opacity-90 transition-all duration-300 transform hover:scale-105">
          View Full Archive
        </button>
      </div>
    </div>
  </section>

  <section class="py-16 bg-primary">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Join Our Community</h2>
        <p class="text-gray-300 mb-10">Be part of the movement that captures skate culture's most authentic moments</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-6 py-3 bg-white text-primary font-medium rounded-full hover:bg-gray-200 transition-colors duration-300">
            Subscribe to Our Newsletter
          </button>
          <button class="px-6 py-3 bg-transparent border-2 border-white text-white font-medium rounded-full hover:bg-white hover:text-primary transition-colors duration-300">
            Follow on Social Media
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .animate-fadeIn.delay-100 {
    animation-delay: 0.1s;
  }
  
  .animate-fadeIn.delay-200 {
    animation-delay: 0.2s;
  }
  
  .animate-fadeIn.delay-300 {
    animation-delay: 0.3s;
  }
  
  .animate-fadeIn.delay-400 {
    animation-delay: 0.4s;
  }
</style>